# Development Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5434
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app_backend_dev

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters

# Application Configuration
APP_ENVIRONMENT=development
APP_PORT=8000
APP_LOG_LEVEL=debug

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Email Configuration (for development - using MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ====================================================================
# EXTERNAL API SERVICES CONFIGURATION
# ====================================================================

# YouTube Data API v3
# Required for video information, transcript, and captions retrieval
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable YouTube Data API v3 in your Google Cloud Console
# Maps to external_apis.youtube.api_key in config via Viper's automatic env binding
APP_EXTERNAL_APIS_YOUTUBE_API_KEY=your-youtube-data-api-v3-key-here

# Google Gemini AI API
# Required for video transcript translation and language detection
# Get your API key from: https://aistudio.google.com/app/apikey
# Maps to external_apis.gemini.api_key in config via Viper's automatic env binding
APP_EXTERNAL_APIS_GEMINI_API_KEY=your-google-gemini-api-key-here

# Encryption key for sensitive data storage (optional)
APP_ENCRYPTION_KEY=your-encryption-key-change-in-production