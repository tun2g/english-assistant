{
  "name": "@english/extension",
  "version": "1.0.0",
  "description": "Chrome extension for English learning platform",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "INLINE_RUNTIME_CHUNK=false vite build --watch --mode development",
    "build": "INLINE_RUNTIME_CHUNK=false vite build --mode production",
    "build:dev": "INLINE_RUNTIME_CHUNK=false vite build --mode development",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@english/shared": "workspace:*",
    "@english/ui": "workspace:*",
    "@tanstack/react-query": "^5.60.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.27.1",
    "@crxjs/vite-plugin": "^2.2.0",
    "@english/eslint-config": "workspace:*",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tanstack/react-query-devtools": "^5.60.5",
    "@thedutchcoder/postcss-rem-to-px": "^0.0.2",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.33",
    "rimraf": "^5.0.5",
    "rollup": "^4.46.3",
    "rollup-plugin-chrome-extension": "^3.6.15",
    "sass": "^1.69.5",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
